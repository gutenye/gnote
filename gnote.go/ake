#!/usr/bin/env bash

VERSION=$(cat VERSION)

main() {
  case "$1" in
    "" ) start ;;
    publish ) publish ;;
    build ) build ;;
    release ) release ;;
    build-all ) build-all ;;
  esac
}

start() {
  go run .
}

publish() {
  build
  package
  # upload to github release
}


build() {
  mkdir -p dist
  go build -o dist/gnote
}

package() {
  tar zcvf macos.tar.gz -C dist  .
}


build-all() {
  ./build.sh
}


main "$@"
